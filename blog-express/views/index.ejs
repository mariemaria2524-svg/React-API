<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

    <div class="container">

      <h1>Create Post</h1>

        <form action="/post" method="POST">
           <input name="title" placeholder="Title">
           <textarea name="content" placeholder="Content"></textarea>
           <button>Create Post</button>
        </form>

        <h1>All Posts</h1>

        <ul>
            <% posts.forEach((post, index)=>{ %>
            <li>
             <a href="/post/<%= index %>">
               <%= post.title %>
              </a>
            </li>
            <% }) %>
        </ul>

    </div>

</body>
</html>
